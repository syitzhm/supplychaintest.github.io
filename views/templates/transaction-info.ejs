        <div class="col-lg-12">
            <h1 class="page-header">
                <%=channelName?channelName:channelID%>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
